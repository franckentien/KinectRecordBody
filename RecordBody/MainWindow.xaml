<Window x:Class="RecordBody.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Body" Height="800" Width="1200" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="Camera" />
                <Canvas Name="Canvas" />

                <Button x:Name="StartRecord" Visibility="Visible" Background="SkyBlue" Margin="1600,950,40,40"
                        Click="StartRecord_Click">
                    <TextBlock Name="StartRecordText" FontSize="35px" FontWeight="Bold" Text="Start Record" />
                </Button>
                <Button x:Name="StopRecord" Visibility="Hidden" Background="SkyBlue" Margin="1600,950,40,40"
                        Click="StopRecord_Click">
                    <TextBlock Name="StopRecordText" FontSize="35px" FontWeight="Bold" Text="Stop Record" />
                </Button>

            </Grid>
        </Viewbox>
    </Grid>
</Window>